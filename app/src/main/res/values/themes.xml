<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- LightMode-->
    <style name="Theme.ApplicationManager" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#CECECE</item>
        <item name="colorSecondaryVariant">#CECECE</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="itemTextColor">@color/black</item>
        <item name="buttonIconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="drawableTint">@color/black</item>
        <item name="android:iconTint" tools:targetApi="o">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="imageButtonStyle">@style/Theme.ApplicationManager.ImageButtonStyle</item>
        <item name="popupTheme">@style/Theme.ApplicationManager.PopupMenuStyle</item>
    </style>

    <style name="Theme.ApplicationManager.ImageButtonStyle">
        <item name="tint">@color/black</item>
    </style>

    <style name="Theme.ApplicationManager.Toolbar">
        <item name="backgroundColor">@color/white</item>
        <item name="subtitleTextColor">@color/black</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:tint">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="drawableTint">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="android:actionOverflowMenuStyle">@style/Theme.ApplicationManager.ActionOverflowMenuStyle</item>
    </style>

    <style name="Theme.ApplicationManager.ActionOverflowMenuStyle">
        <item name="iconTint">@color/black</item>
    </style>
    <style name="Theme.ApplicationManager.PopupMenuStyle">
        <item name="itemTextColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="itemBackground">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
    </style>
    <!-- Darkmode -->
    <style name="Theme.ApplicationManager.DarkMode" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#5B467F</item>
        <item name="colorSecondaryVariant">#2A1A37</item>
        <item name="colorOnSecondary">@color/yellow_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="itemTextColor">@color/white</item>
        <item name="buttonIconTint">@color/white</item>
        <item name="android:windowBackground">#2A1A37</item>
        <item name="imageButtonStyle">@style/Theme.ApplicationManager.DarkMode.ImageButtonStyle</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:iconTint" tools:targetApi="o">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="popupTheme">@style/Theme.ApplicationManager.DarkMode.PopupMenuStyle</item>
    </style>
    <style name="Theme.ApplicationManager.DarkMode.ImageButtonStyle">
        <item name="tint">@color/white</item>
    </style>
    <style name="Theme.ApplicationManager.DarkMode.Toolbar">
        <item name="backgroundColor">#2A1A37</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:tint">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:background">#372653</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:actionOverflowMenuStyle">@style/Theme.ApplicationManager.DarkMode.ActionOverflowMenuStyle</item>
    </style>
    <style name="Theme.ApplicationManager.DarkMode.ActionOverflowMenuStyle">
        <item name="iconTint">@color/white</item>
    </style>
    <style name="Theme.ApplicationManager.DarkMode.PopupMenuStyle">
        <item name="itemTextColor">@color/white</item>
        <item name="itemBackground">@color/background_darkmode</item>
        <item name="backgroundColor">#372653</item>
        <item name="android:background">#372653</item>
        <item name="android:popupBackground">#372653</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>
    <style name="Theme.ApplicationManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>