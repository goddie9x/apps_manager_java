<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- LightMode-->
    <style name="Theme.ApplicationManager" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="itemTextColor">@color/black</item>
        <item name="itemFillColor">@color/white</item>
        <item name="buttonIconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="drawableTint">@color/black</item>
        <item name="android:iconTint" tools:targetApi="o">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="imageButtonStyle">@style/Theme.ApplicationManager.ImageButtonStyle</item>
        <item name="popupTheme">@style/Theme.ApplicationManager.PopupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/Theme.ApplicationManager.PopupMenuStyle</item>
        <item name="navigationViewStyle">@style/Theme.ApplicationManager.NavigationViewStyle</item>
        <item name="drawerArrowStyle">@style/Theme.ApplicationManager.DrawerArrowStyle</item>
        <item name="autoCompleteTextViewStyle">@style/Theme.ApplicationManager.SearchAutoCompleteTextView</item>
    </style>
    <style name="Theme.ApplicationManager.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/black</item>
    </style>
    <style name="Theme.ApplicationManager.SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">?attr/itemTextColor</item>
        <item name="android:textColorHint">?attr/itemTextColor</item>
    </style>
    <style name="Theme.ApplicationManager.NavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="android:itemTextAppearance">@color/black</item>
    </style>
    <style name="Theme.ApplicationManager.ImageButtonStyle">
        <item name="tint">@color/black</item>
    </style>

    <style name="Theme.ApplicationManager.Toolbar">
        <item name="backgroundColor">@color/white</item>
        <item name="subtitleTextColor">@color/black</item>
        <item name="titleTextColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="drawableTint">@color/black</item>
        <item name="android:actionOverflowMenuStyle">@style/Theme.ApplicationManager.ActionOverflowMenuStyle</item>
    </style>

    <style name="Theme.ApplicationManager.ActionOverflowMenuStyle">
        <item name="iconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
        <item name="itemFillColor">@color/white</item>
    </style>
    <style name="Theme.ApplicationManager.PopupMenuStyle" parent="Theme.AppCompat.Dialog">
        <item name="itemTextColor">@color/black</item>
        <item name="itemFillColor">@color/white</item>
        <item name="android:overScrollHeader">@color/transparent</item>
        <item name="android:overScrollFooter">@color/transparent</item>
        <item name="android:background">@color/white</item>
        <item name="itemBackground">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:panelBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="iconTint">@color/black</item>
    </style>
    <!-- Darkmode -->
    <style name="Theme.ApplicationManager.DarkMode" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary_darkmode</item>
        <item name="colorSecondaryVariant">@color/popup_background_darkmode</item>
        <item name="colorOnSecondary">@color/yellow_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="itemTextColor">@color/white</item>
        <item name="itemFillColor">@color/black</item>
        <item name="buttonIconTint">@color/white</item>
        <item name="android:itemBackground">@color/background_darkmode</item>
        <item name="android:background">@color/popup_background_darkmode</item>
        <item name="colorBackgroundFloating">@color/popup_background_darkmode</item>
        <item name="imageButtonStyle">@style/Theme.ApplicationManager.DarkMode.ImageButtonStyle</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:iconTint" tools:targetApi="o">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="android:popupMenuStyle">@style/Theme.ApplicationManager.DarkMode.PopupMenuStyle</item>
        <item name="popupTheme">@style/Theme.ApplicationManager.DarkMode.PopupMenuStyle</item>
        <item name="navigationViewStyle">@style/Theme.ApplicationManager.DarkMode.NavigationViewStyle</item>
        <item name="drawerArrowStyle">@style/Theme.ApplicationManager.DarkMode.DrawerArrowStyle</item>
        <item name="autoCompleteTextViewStyle">@style/Theme.ApplicationManager.DarkMode.SearchAutoCompleteTextView</item>
    </style>
    <style name="Theme.ApplicationManager.DarkMode.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>
    <style name="Theme.ApplicationManager.DarkMode.SearchAutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">?attr/itemTextColor</item>
        <item name="android:textColorHint">?attr/itemTextColor</item>
    </style>
    <style name="Theme.ApplicationManager.DarkMode.NavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="android:itemTextAppearance">@color/white</item>
    </style>
    <style name="Theme.ApplicationManager.DarkMode.ImageButtonStyle">
        <item name="tint">@color/white</item>
    </style>
    <style name="Theme.ApplicationManager.DarkMode.Toolbar">
        <item name="backgroundColor">@color/popup_background_darkmode</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="drawableTint">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:actionOverflowMenuStyle">@style/Theme.ApplicationManager.DarkMode.ActionOverflowMenuStyle</item>
    </style>
    <style name="Theme.ApplicationManager.DarkMode.ActionOverflowMenuStyle">
        <item name="iconTint">@color/white</item>
    </style>
    <style name="Theme.ApplicationManager.DarkMode.PopupMenuStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="itemTextColor">@color/white</item>
        <item name="itemFillColor">@color/black</item>
        <item name="android:overScrollHeader">@color/transparent</item>
        <item name="android:overScrollFooter">@color/transparent</item>
        <item name="itemBackground">@color/background_darkmode</item>
        <item name="android:itemBackground">@color/background_darkmode</item>
        <item name="backgroundColor">@color/background_darkmode</item>
        <item name="android:background">@color/background_darkmode</item>
        <item name="android:popupBackground">?attr/colorSecondaryVariant</item>
        <item name="android:panelBackground">?attr/colorSecondaryVariant</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>
    <style name="Theme.ApplicationManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>