<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="freeze_apps"
        android:enabled="true"
        android:icon="@drawable/ic_freeze"
        android:shortcutShortLabel="@string/freeze_all_app"
        android:shortcutLongLabel="@string/freeze_all_app"
        android:background="@color/transparent"
        >
        <intent
            android:action="android.intent.action.MAIN"
            android:targetPackage="com.god.ApplicationManager"
            android:targetClass="com.god.ApplicationManager.UI.FreezeShortcutActivity"
            />
    </shortcut>
    <shortcut
        android:shortcutId="toggle_notification"
        android:enabled="true"
        android:icon="@drawable/ic_notification"
        android:shortcutShortLabel="@string/turn_off_notification"
        android:shortcutLongLabel="@string/turn_off_notification"
        android:background="@color/transparent"
        >
        <intent
            android:action="android.intent.action.MAIN"
            android:targetPackage="com.god.ApplicationManager"
            android:targetClass="com.god.ApplicationManager.UI.NotificationShortcutActivity"
            />
    </shortcut>
</shortcuts>